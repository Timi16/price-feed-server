{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    // ‚ùå REMOVE THIS LINE: "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    
    // Path mapping for local PerpSdk
    "baseUrl": ".",
    "paths": {
      "@perpsdk/*": ["../PerpSdk/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../PerpSdk/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}